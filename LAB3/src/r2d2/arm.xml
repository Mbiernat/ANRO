<robot name="arm">

 	<link name="base_link">
		<visual>
		    <origin xyz="0 0 0.05" rpy="0 0 0"/>
			<geometry>
				<box size="0.2 0.2 0.1"/>
			</geometry>
		</visual>	
	</link>

<link name="part1">
<visual>
  <origin xyz="0 0 0.25" rpy="0 0 0"/>
    <geometry>
      <cylinder length="0.5" radius="0.05"/>
    </geometry>
</visual>
</link>

<joint name="base_to_part1" type="fixed">
    <parent link="base_link"/>
    <child link="part1"/>
  </joint>

<link name="part2">
 <visual>
  <origin xyz="0.25 0 0.6" rpy="0 1.57 0"/>
   <geometry>
    <cylinder length="0.5" radius="0.05"/>
   </geometry>
 </visual>
</link>

<joint name="hinge1" type="continuous">
    <parent link="part1"/>
    <child link="part2"/>
    <origin xyz="0 0 0" rpy="0 0 0" /> 
    <axis xyz="0 0 1" rpy="0 0 0" />
  </joint>

<link name="part3">
 <visual>
  <origin xyz="0.25 0 0.6" rpy="0 1.57 0"/>
   <geometry>
    <cylinder length="0.5" radius="0.05"/>
   </geometry>
 </visual>
</link>

<joint name="hinge2" type="continuous">
    <parent link="part2"/>
    <child link="part3"/>
   <axis xyz="0 0 1" rpy="0 0 0" />
  <origin xyz="0.5 0 0"/>
  </joint>

<link name="part4">
 <visual>
<origin xyz="0 0 0.5" rpy="0 0 0"/>
 <geometry>
	<box size="0.1 0.1 0.2"/>
</geometry>
 </visual>
</link>
	
<joint name="hinge3" type="prismatic">
    <parent link="part3"/>
    <child link="part4"/>
   <axis xyz="0 0 1" rpy="0 0 0" />
  <origin xyz="0.5 0 0"/>
<limit lower="-0.2" upper="0" />
  </joint>
 
</robot>

